<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= contact._id %>"
                    >

            
                    <label for="nameTextField">Name</label>
                    <input type="text"
                           class="form-control"
                           id="nameTextField"
                           placeholder="Enter your Full name"
                           name="name"
                           value="<%= contact.name %>"
                           required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone Number</label>
                    <input type="tel"
                           class="form-control"
                           id="phoneTextField"
                           placeholder="Enter your 10-digit phone number"
                           name="phone_no"  
                           value="<%= contact.phone_no %>"
                           pattern="[0-9]{10}" required>   <!-- Specify a pattern for a 10-digit phone number -->
                </div>
                

                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="email"
                           class="form-control"
                           id="emailTextField"
                           placeholder="Enter your email address e.g jdoe@hotmail.com"
                           name="email"
                           value="<%= contact.email %>"
                           required>
                </div>
                
                
                <br />
               
              

             
                

                <br/>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/contacts/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

                <% if (title == "Edit a Contact Details") { %>
                    <a href="/contacts/delete/<%= contact._id %>" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>Delete Contact
                    </a>
                       
                  <% } %>

                  
            </form>
        </div>

    </div>
</div>
