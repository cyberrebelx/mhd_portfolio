  <!-- Main Content -->
  <div class="container">
    <div class="row">
        <h1><%= title %></h1>
        <br>
        <div>
            
            <a href="/contacts/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i> 
                Add a new Contact
            </a>                
        </div>
        <br>
        
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                   
                    <th class="text-center">Name</th>
                    <th class="text-center">Phone No</th>
                    <th class="text-center">E-mail Address</th>
                    <th class="text-center" colspan="3">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let i = 0; i < ContactsList.length; i++) { %>
                    <tr>
                        <td class="text-center"><%= ContactsList[i].name %></td>
                        <td class="text-center"><%= ContactsList[i].phone_no %></td>
                        <td class="text-center"><%= ContactsList[i].email %></td>
                                    
                        <td class="text-center">
                            <a href="/contacts/details/<%= ContactsList[i]._id %>" class="btn btn-success btn-sm"> 
                            <i class="fas fa-info"></i> </a>
                        </td>
                        <td class="text-center">
                          
                            <a href="/contacts/edit/<%= ContactsList[i]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <!-- --------------------------- -->
                            <!-- Fix the DELETE button below -->
                            <!-- --------------------------- -->
                            <a href="/contacts/delete/<%= ContactsList[i]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>
